{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiteFetch",
  "version": "0.1.0",
  "identifier": "com.litefetch.client",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ./frontend -- --host --port 5111",
    "beforeBuildCommand": "npm run build --prefix ./frontend",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5111"
  },
  "app": {
    "windows": [
      {
        "title": "LiteFetch",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "deb"],
    "externalBin": ["bin/litefetch-backend"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libjavascriptcoregtk-4.1-0",
          "libsoup-3.0-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2",
          "libxdo3",
          "libssl3"
        ]
      }
    }
  }
}